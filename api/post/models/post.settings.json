{
  "connection": "default",
  "collectionName": "posts",
  "info": {
    "name": "post"
  },
  "options": {
    "increments": true,
    "timestamps": true
  },
  "attributes": {
    "title": {
      "type": "string",
      "required": true,
      "unique": true
    },
    "lead": {
      "type": "text",
      "required": true,
      "unique": true
    },
    "content": {
      "type": "richtext",
      "required": true
    },
    "user": {
      "plugin": "users-permissions",
      "model": "user",
      "via": "posts"
    },
    "image": {
      "model": "file",
      "via": "related",
      "plugin": "upload",
      "required": false
    },
    "category": {
      "model": "category",
      "via": "posts"
    },
    "tags": {
      "collection": "tag",
      "via": "posts",
      "dominant": true
    },
    "slug": {
      "type": "string",
      "unique": false,
      "required": false
    }
  }
}
